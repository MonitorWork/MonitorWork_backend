generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model Professor {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  age          String?
  email        String      @unique
  universityId String
  subject      String
  password     String
  disciplines  Discipline[] // Relacionamento: Um professor pode ter v√°rias disciplinas
}

model Discipline {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  professorId String    @db.ObjectId
  professor   Professor @relation(fields: [professorId], references: [id])
}



model User {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  name  String
  age   String?
  password String  // Campo para armazenar a senha hashada
}